<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout

    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_cardHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Holder Name"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintLeft_toLeftOf="@id/card2"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dim_10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/dim_20dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="@dimen/dim_10dp"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dim_20dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ravi Kumar"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dim_14sp"/>
        </LinearLayout>






    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/text_creditcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Credtit Card Number"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintLeft_toLeftOf="@id/card2"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dim_10dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/dim_10dp"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="@dimen/dim_20dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="@dimen/dim_10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/dim_20dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111 111 111"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dim_14sp"/>
        </LinearLayout>






    </androidx.cardview.widget.CardView>
    

</LinearLayout>
</layout>