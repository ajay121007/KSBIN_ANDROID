<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConfirmationActivity">
    <ImageView
        android:id="@+id/confirm_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/marign216_dp"
        android:layout_height="@dimen/margin_191_dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_confirm_logo"
        android:layout_marginTop="@dimen/margin_100"/>
    <TextView
        android:id="@+id/confirm_emailText"
        android:layout_width="@dimen/_240_dp"
        android:layout_height="@dimen/_26dp"
        android:text="Confirm Your Email!"
        android:textSize="@dimen/_22_sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_26dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_logo"
        app:layout_constraintRight_toRightOf="@id/confirm_logo"
        app:layout_constraintLeft_toLeftOf="@id/confirm_logo"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="@dimen/dim_283_dp"
        android:layout_height="@dimen/dim_72_dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:gravity="center"
        android:text="@string/your_account_has_been_successfully_n_registered_to_complete_the_process_n_please_check_your_email_for_validation_n_request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintLeft_toLeftOf="@id/confirm_emailText"
        app:layout_constraintRight_toRightOf="@id/confirm_emailText"
        app:layout_constraintTop_toBottomOf="@id/confirm_emailText"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:layout_width="@dimen/dim_86_dp"
        android:layout_height="@dimen/dim_38_dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@drawable/rouned_corner_btn"
        android:text="Ok >"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintLeft_toLeftOf="@id/text"
        app:layout_constraintRight_toRightOf="@id/text"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintVertical_bias="0.035" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>